<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    tools:context=".Login.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:navigationIcon="@drawable/return1"
        android:navigationIcon="@drawable/return1"
        android:layout_height="?attr/actionBarSize"
        android:background="#DC2E45"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:id="@+id/login_et"
        android:drawablePadding="6dp"
        android:paddingLeft="6dp"
        android:hint="输入密码"
        android:textSize="12sp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/et_password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:id="@+id/et_password"
        android:drawablePadding="6dp"
        android:paddingLeft="6dp"
        android:hint="再次输入"
        android:textSize="12sp"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/register_button"
        android:layout_alignLeft="@+id/login_et"
        android:layout_alignStart="@+id/login_et" />

    <Button
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:text="注册账号"
        android:background="#DC2E45"
        android:id="@+id/register_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码格式为8至32位大小写字母、数字、下划线组合"
        android:textSize="12sp"
        android:id="@+id/textView"
        android:layout_above="@+id/register_button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
