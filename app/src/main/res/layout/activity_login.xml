<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    tools:context=".Login.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:navigationIcon="@drawable/return1"
        android:navigationIcon="@drawable/return1"
        android:layout_height="?attr/actionBarSize"
        android:background="#DC2E45"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:id="@+id/login_et"
        android:drawableLeft="@drawable/login"
        android:drawablePadding="6dp"
        android:paddingLeft="6dp"
        android:hint="手机号"
        android:textSize="12sp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/et_password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:id="@+id/et_password"
        android:drawablePadding="6dp"
        android:drawableLeft="@drawable/password"
        android:paddingLeft="6dp"
        android:hint="密码"
        android:textSize="12sp"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/login_button"
        android:layout_alignLeft="@+id/login_et"
        android:layout_alignStart="@+id/login_et" />

    <Button
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:text="登陆"
        android:background="#DC2E45"
        android:id="@+id/login_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:id="@+id/tv_regist"
        android:onClick="true"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/login_button"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/tv_regist"
        android:layout_alignRight="@+id/et_password"
        android:layout_alignEnd="@+id/et_password"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />


</RelativeLayout>
